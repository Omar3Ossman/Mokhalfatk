<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment">

    <ImageView
        android:id="@+id/fawry_pic"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/payment" />

    <TextView
        android:id="@+id/btnPayWithFawry"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:padding="5dp"
        android:text="Pay with Fawry"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnPayWithCard"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/fawry_pic" />

    <TextView
        android:id="@+id/btnPayWithCard"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:padding="5dp"
        android:text="Pay with Card"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:srcCompat="@drawable/button" />


</androidx.constraintlayout.widget.ConstraintLayout>
