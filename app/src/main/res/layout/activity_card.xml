<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Card">


    <ImageView
        android:id="@+id/fawry_pic"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/payment" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fawry_pic">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="371dp"
            android:layout_weight=".7"
            android:paddingRight="15dp">


            <EditText
                android:id="@+id/card_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:autofillHints=""
                android:background="@drawable/edittext_bg"
                android:hint="Name on Card"
                android:inputType="textPersonName"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="15dp" />

            <EditText
                android:id="@+id/card_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/card_name"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext_bg"
                android:hint="Card Number"
                android:inputType="phone"
                android:lines="1"
                android:maxLength="19"
                android:maxLines="1"
                android:paddingLeft="15dp" />

            <LinearLayout
                android:id="@+id/expiry_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_number"
                android:layout_marginTop="15dp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/expiry_date"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/card_name"
                    android:layout_weight=".50"
                    android:background="@drawable/edittext_bg"
                    android:hint="MM/YY"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:paddingLeft="15dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/cvc"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight=".45"
                    android:background="@drawable/edittext_bg"
                    android:hint="CCV"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:paddingLeft="15dp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/btnPayCard"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/expiry_date_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="115dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="5dp"
                android:text="Confirm Payment"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/cancelpym"
                android:layout_width="239dp"
                android:layout_height="41dp"
                android:layout_below="@+id/expiry_date_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="115dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="5dp"
                android:text="Cancel Payment"
                android:textColor="@android:color/white" />

        </RelativeLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>